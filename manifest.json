{
  "manifest_version": 3,
  "name": "Tab Manager",
  "version": "1.0.1",
  "description": "Manage your open tabs easily. Sort by URL or title, close selected tabs, and reset selections quickly!",
  "permissions": ["tabs", "activeTab"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon_16.png",
      "48": "images/icon_48.png",
      "128": "images/icon_128.png"
    }
  },
  "icons": {
    "16": "images/icon_16.png",
    "48": "images/icon_48.png",
    "128": "images/icon_128.png"
  }
}
